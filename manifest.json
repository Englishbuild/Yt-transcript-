{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "CRX Extractor/Downloader with Beautifier",
  "version": "2.0.0",
  "manifest_version": 3,
  "description": "Download CRX Files as beautified ZIP with formatted code or original CRX format. Automatically beautifies JS, CSS, HTML, JSON files.",
  "permissions": [
    "downloads",
    "contextMenus",
    "activeTab",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://clients2.google.com/service/update2/crx*",
    "*://clients2.googleusercontent.com/crx/download/*",
    "*://cdnjs.cloudflare.com/ajax/libs/jszip/*"
  ],
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png"
  },
  "action": {
    "default_icon": "128.png",
    "default_popup": "popup.html"
  }
}