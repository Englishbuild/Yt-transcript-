{
  "_comment": "To install: 1. Open Chrome -> Extensions -> Enable Developer Mode -> Load Unpacked -> Select this folder",
  "manifest_version": 3,
  "name": "YouTube Transcript Extractor",
  "version": "1.0",
  "description": "Extract transcripts from YouTube videos using the InnerTube API",
  "permissions": [
    "activeTab",
    "https://www.youtube.com/",
    "https://youtu.be/"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtu.be/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Transcript Extractor"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://youtu.be/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}