{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "CRX Extractor/Downloader with Code Beautifier",
  "version": "1.7.0",
  "manifest_version": 3,
  "description": "Download CRX Files as original format or extract and beautify the code (JS, CSS, HTML, JSON) for easy reading",
  "permissions": [
    "downloads",
    "contextMenus",
    "activeTab",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://clients2.google.com/service/update2/crx*",
    "*://clients2.googleusercontent.com/crx/download/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}